program=$0
[ -h "$program" ] && PRG=$(readlink -f "$program")
program_dir=$(dirname "$program")

[ -z "$DUEL_HOME" ] && DUEL_HOME=$(cd "$program_dir/.." > /dev/null; pwd)

if [ -z "$JAVA_HOME" ]
then
    java_cmd=$(which java)
else
    java_cmd="$JAVA_HOME/bin/java"
fi

module=org.leadpony.duel.fake.server/org.leadpony.duel.fake.server.ServerCommand

if [ "$1" = "start" ]
then
    log_file="$DUEL_HOME/log/server-$(date +%Y%m%d-%H%M%S-%N).log"
    nohup "$java_cmd" \
        "-Dduel.home=$DUEL_HOME" \
        -p "$DUEL_HOME/server" \
        -m $module \
        "$@" \
        > "$log_file" 2>&1 \
        &
    timeout 5 tail -f "$log_file"
else
    exec "$java_cmd" \
        "-Dduel.home=$DUEL_HOME" \
        -p "$DUEL_HOME/server" \
        -m $module \
        "$@"
fi
