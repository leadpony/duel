<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>assembly</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>duel</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>LICENSE</include>
                <include>NOTICE</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/example</directory>
            <outputDirectory>example</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/assembly</directory>
            <outputDirectory>log</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>jakarta.json:jakarta.json-api</include>
                <include>org.leadpony.duel:duel-cli</include>
                <include>org.leadpony.duel:duel-core</include>
                <include>org.opentest4j:opentest4j</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.leadpony.duel:duel-assertion-basic</include>
            </includes>
            <outputDirectory>plugin</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>info.picocli:picocli</include>
                <include>jakarta.json:jakarta.json-api</include>
                <include>org.leadpony.duel:duel-fake-server</include>
                <include>org.leadpony.joy:joy</include>
            </includes>
            <outputDirectory>server</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
        </dependencySet>
    </dependencySets>
</assembly>
